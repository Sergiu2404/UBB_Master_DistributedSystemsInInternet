<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="default">
    </persistence-unit>

    <persistence-unit name="PU_Postgres" transaction-type="JTA">
        <jta-data-source>java:/jdbc/PostgresDS</jta-data-source>
        <class>com.example.weather_preferences_app.entities.Location</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.archive.autodetection" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="PU_SQLServer" transaction-type="JTA">
        <jta-data-source>java:/jdbc/SQLServerDS</jta-data-source>
        <class>com.example.weather_preferences_app.entities.Country</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.archive.autodetection" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="PU_Oracle" transaction-type="JTA">
        <jta-data-source>java:/jdbc/OracleDS</jta-data-source>
        <class>com.example.weather_preferences_app.entities.Preference</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.archive.autodetection" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
