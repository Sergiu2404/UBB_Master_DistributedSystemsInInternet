    <persistence-unit name="jpa-h2-multipltables">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.jpa.multipletables.multipleentities.MealWithMultipleEntities</class>
        <class>com.example.jpa.multipletables.multipleentities.AllergensAsEntity</class>
        
        <class>com.example.jpa.multipletables.secondarytable.MealAsSingleEntity</class>
        
        <class>com.example.jpa.multipletables.secondarytable.embeddable.MealWithEmbeddedAllergens</class>
        <class>com.example.jpa.multipletables.secondarytable.embeddable.AllergensAsEmbeddable</class>

